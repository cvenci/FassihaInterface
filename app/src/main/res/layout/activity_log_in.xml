<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageViewLogoLogIn"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_fassiha" />

    <EditText
        android:id="@+id/editTextTextUserNameLogIn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:hint="اسم المستخدم"
        android:inputType="textPersonName"
        android:textColorHighlight="#E91E63"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonMicUsernameLogIn"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoLogIn" />

    <EditText
        android:id="@+id/editTextPasswordLogIn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:paddingLeft="200dp"
        android:hint="كلمة السر"
        android:inputType="textPassword"
        android:textColorHighlight="#E91E63"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextUserNameLogIn"
        app:layout_constraintStart_toStartOf="@+id/editTextTextUserNameLogIn"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUserNameLogIn" />

    <CheckBox
        android:id="@+id/checkBoxSaveInfoLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="حفظ معلوماتي"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordLogIn"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordLogIn" />

    <Button
        android:id="@+id/buttonLogInLogIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:onClick="logIn"
        android:text="تسجيل الدخول"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordLogIn"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordLogIn"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSaveInfoLogIn" />

    <ImageButton
        android:id="@+id/imageButtonMicUsernameLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:tint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextTextUserNameLogIn"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <ImageButton
        android:id="@+id/imageButtonMicPAsswordLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_button"
        android:tint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonMicUsernameLogIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageButtonMicUsernameLogIn"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMicUsernameLogIn"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />
</androidx.constraintlayout.widget.ConstraintLayout>